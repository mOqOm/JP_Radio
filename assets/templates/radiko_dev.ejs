<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Radiko Stations</title>
    <link rel="stylesheet" href="/assets/css/radiko-stations.css?v=20251112">
</head>

<body>
    <header>
        <h1>Radiko Stations</h1>
        <nav class="tab-nav">
            <button class="tab-button active" data-tab="stations">放送局一覧</button>
            <button class="tab-button" data-tab="with-program">現在の番組</button>
            <button class="tab-button" data-tab="programs">番組表</button>
        </nav>
    </header>

    <main>
        <div id="loading" class="loading">Loading stations...</div>
        <div id="error" class="error" style="display: none;"></div>

        <!-- 放送局一覧タブ -->
        <div id="stations-tab" class="tab-content active">
            <table id="stationsTable" style="display: none;">
                <thead>
                    <tr>
                        <th>Station ID</th>
                        <th>Name</th>
                        <th>Region</th>
                        <th>Area</th>
                    </tr>
                </thead>
                <tbody id="stationsBody"></tbody>
            </table>
        </div>

        <!-- 現在の番組タブ -->
        <div id="with-program-tab" class="tab-content">
            <div id="programGrid" class="program-grid"></div>
        </div>

        <!-- 番組表タブ -->
        <div id="programs-tab" class="tab-content">
            <div class="programs-controls">
                <div class="station-selector">
                    <label for="stationSelect">放送局:</label>
                    <select id="stationSelect">
                        <option value="">選択してください</option>
                    </select>
                </div>
                <div class="date-selector">
                    <label for="dateInput">日付:</label>
                    <input type="date" id="dateInput">
                    <button id="todayButton" class="btn-small">今日</button>
                </div>
                <button id="loadProgramsButton" class="btn-primary">番組表を表示</button>
            </div>
            <div id="programsList" class="programs-list"></div>
        </div>
    </main>

    <script>
        // API エンドポイント（EJS から渡される）
        window.API_ENDPOINTS = {
            stations: '/api/radiko/stations',
            withProgram: '/api/radiko/stations/with-program',
            programs: '/api/radiko/stations/:stationId/programs'
        };
    </script>
    <script src="/assets/js/radiko-stations.js?v=20251112"></script>
</body>

</html>